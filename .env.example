# Database Configuration
EXPO_PUBLIC_DATABASE_URL=postgresql://username:password@host:5432/database_name

# Sanity CMS Configuration
EXPO_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
EXPO_PUBLIC_SANITY_DATASET=production
EXPO_PUBLIC_SANITY_TOKEN=your_sanity_token
EXPO_PUBLIC_SANITY_API_VERSION=2024-01-01

# Error Monitoring
EXPO_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Redis Configuration (for advanced rate limiting)
EXPO_PUBLIC_REDIS_URL=redis://localhost:6379

# API Configuration
EXPO_PUBLIC_API_URL=https://your-api-domain.com
EXPO_PUBLIC_API_KEY=your_api_key

# Push Notifications
EXPO_PUBLIC_FCM_SERVER_KEY=your_firebase_server_key
EXPO_PUBLIC_FCM_SENDER_ID=your_firebase_sender_id

# Payment Processing (for Connects purchases)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# App Configuration
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# Security
EXPO_PUBLIC_JWT_SECRET=your_jwt_secret_key
EXPO_PUBLIC_ENCRYPTION_KEY=your_encryption_key

# External Services
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_name
EXPO_PUBLIC_CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Email Service (for notifications)
EXPO_PUBLIC_SENDGRID_API_KEY=your_sendgrid_key
EXPO_PUBLIC_FROM_EMAIL=noreply@volyx.com

# Analytics
EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Social Authentication (optional)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
EXPO_PUBLIC_APPLE_CLIENT_ID=your_apple_client_id

# Rate Limiting
EXPO_PUBLIC_RATE_LIMIT_WINDOW=900000
EXPO_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100